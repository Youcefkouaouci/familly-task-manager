{% extends 'base.html.twig' %}

{% block title %}Welcome to Family Task Manager{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8 -mt-16">
    <div class="sm:mx-auto sm:w-full sm:max-w-md text-center mb-6">
        <h1 class="text-3xl font-extrabold text-primary-600 leading-tight">
            Family Task Manager
        </h1>
        <p class="mt-2 text-gray-600">
            Organize, assign, and track tasks for your family
        </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <div class="space-y-6">
                <div>
                    <h2 class="text-xl font-semibold text-center mb-6">
                        Welcome to your family's task management system
                    </h2>
                </div>

                <div class="mt-6 space-y-4">
                    <div class="flex flex-col space-y-3">
                        <a href="{{ path('app_login') }}" class="btn btn-primary w-full justify-center py-3">
                            <span class="text-base">
                                Login
                            </span>
                        </a>
                    </div>
                </div>

                <div class="mt-8">
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                        <div class="bg-primary-50 p-4 rounded-lg border border-primary-100">
                            <h3 class="font-medium text-primary-700 mb-2">Parents</h3>
                            <ul class="text-sm text-gray-600 space-y-1">
                                <li class="flex items-start">
                                    <svg class="h-5 w-5 text-primary-500 mr-1.5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                    </svg>
                                    Create and assign tasks
                                </li>
                                <li class="flex items-start">
                                    <svg class="h-5 w-5 text-primary-500 mr-1.5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                    </svg>
                                    Track progress and completion
                                </li>
                                <li class="flex items-start">
                                    <svg class="h-5 w-5 text-primary-500 mr-1.5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                    </svg>
                                    Set rewards for completed tasks
                                </li>
                            </ul>
                        </div>
                        <div class="bg-secondary-50 p-4 rounded-lg border border-secondary-100">
                            <h3 class="font-medium text-secondary-700 mb-2">Children</h3>
                            <ul class="text-sm text-gray-600 space-y-1">
                                <li class="flex items-start">
                                    <svg class="h-5 w-5 text-secondary-500 mr-1.5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                    </svg>
                                    View assigned tasks
                                </li>
                                <li class="flex items-start">
                                    <svg class="h-5 w-5 text-secondary-500 mr-1.5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                    </svg>
                                    Accept, refuse, or negotiate tasks
                                </li>
                                <li class="flex items-start">
                                    <svg class="h-5 w-5 text-secondary-500 mr-1.5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                    </svg>
                                    Mark tasks as completed
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}