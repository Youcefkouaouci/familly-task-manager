{% extends 'base.html.twig' %}

{% block title %}Task Details{% endblock %}

{% block body %}
<div class="space-y-6">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-900">Task Details</h1>
        <div class="flex space-x-2">
            <a href="{{ path('app_parent_task_edit', {'id': task.id}) }}" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
                Edit Task
            </a>
            <a href="{{ path('app_parent_tasks') }}" class="btn btn-outline">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Back to Tasks
            </a>
        </div>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2">
            <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-100">
                <div class="space-y-4">
                    <div>
                        <div class="flex items-center justify-between">
                            <h2 class="text-xl font-semibold text-gray-900">{{ task.title }}</h2>
                            {% if task.isUrgent %}
                                <span class="task-status-badge status-urgent animate-pulse-slow">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-1" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                    </svg>
                                    Urgent
                                </span>
                            {% endif %}
                        </div>
                        <p class="text-sm text-gray-600 mt-1">Created on {{ task.createdAt|date('M d, Y') }}</p>
                    </div>
                    
                    <div class="flex flex-wrap gap-2">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            {{ task.category|capitalize }}
                        </span>
                        
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                            </svg>
                            Due {{ task.dueDate|date('M d, Y h:i a') }}
                        </span>
                        
                        {% if task.reward %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-success-100 text-success-800">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M5 2a1 1 0 011 1v1h1a1 1 0 010 2H6v1a1 1 0 01-2 0V6H3a1 1 0 010-2h1V3a1 1 0 011-1zm0 10a1 1 0 011 1v1h1a1 1 0 110 2H6v1a1 1 0 11-2 0v-1H3a1 1 0 110-2h1v-1a1 1 0 011-1zm7-10a1 1 0 01.707.293l.707.707L15.414 5a1 1 0 11-1.414 1.414L12.707 5.12l-.707-.707a1 1 0 01.707-1.707zm-7 8a1 1 0 01.707.293l.707.707L15.414 13a1 1 0 11-1.414 1.414l-1.293-1.293-.707-.707a1 1 0 01.707-1.707z" clip-rule="evenodd" />
                                </svg>
                                {{ task.reward }}
                            </span>
                        {% endif %}
                    </div>
                    
                    <div class="py-3 border-t border-b border-gray-200">
                        <h3 class="text-sm font-medium text-gray-700 mb-2">Description</h3>
                        <p class="text-gray-600 whitespace-pre-line">{{ task.description }}</p>
                    </div>
                    
                    <div>
                        <h3 class="text-sm font-medium text-gray-700">Remaining Time</h3>
                        <div class="mt-1 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                            </svg>
                            <span class="text-gray-700 font-medium">{{ task.remainingTime }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div>
            <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-100 sticky top-4">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-lg font-semibold text-gray-900">Task Assignments</h2>
                </div>
                
                {% if assignments is empty %}
                    <div class="text-center py-4">
                        <p class="text-gray-500">No children assigned to this task</p>
                        <a href="{{ path('app_parent_task_edit', {'id': task.id}) }}" class="mt-2 inline-flex items-center text-sm text-primary-600 hover:text-primary-700">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                            </svg>
                            Assign children
                        </a>
                    </div>
                {% else %}
                    <div class="space-y-3">
                        {% for assignment in assignments %}
                            <div class="flex items-center justify-between p-3 border border-gray-200 rounded-md">
                                <div>
                                    <p class="font-medium text-gray-800">{{ assignment.child.fullName }}</p>
                                    <div class="flex items-center mt-1">
                                        <span class="task-status-badge {{ assignment.statusClass }}">
                                            {{ assignment.statusLabel }}
                                        </span>
                                        
                                        {% if assignment.status == constant('App\\Entity\\TaskAssignment::STATUS_COMPLETED') %}
                                            <span class="ml-2 text-xs text-gray-500">
                                                {{ assignment.completedAt ? assignment.completedAt|date('M d, Y h:i a') : '' }}
                                            </span>
                                        {% endif %}
                                    </div>
                                    
                                    {% if assignment.status == constant('App\\Entity\\TaskAssignment::STATUS_NEGOTIATING') and assignment.notes %}
                                        <div class="mt-2 text-sm text-gray-600 bg-gray-50 p-2 rounded border border-gray-200">
                                            <span class="font-medium">Negotiation note:</span> {{ assignment.notes }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
                
                <div class="mt-6 pt-4 border-t border-gray-200">
                    <form action="{{ path('app_parent_task_delete', {'id': task.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this task?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                        <button type="submit" class="w-full btn-danger btn flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                            Delete Task
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}